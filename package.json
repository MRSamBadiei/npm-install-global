{
  "name": "npm-install-global",
  "description": "Simple API for globally installing or uninstalling one or more NPM packages.",
  "version": "0.1.2",
  "homepage": "https://github.com/jonschlinkert/npm-install-global",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "jonschlinkert/npm-install-global",
  "bugs": {
    "url": "https://github.com/jonschlinkert/npm-install-global/issues"
  },
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "mocha"
  },
